#:import sm kivy.uix.screenmanager

ScreenManager
    id:manager
    transition:sm.FadeTransition(duration=.0)
    MDScreen:
        name:"home"
        FloatLayout:
            MDIcon:
                icon:"account-tie-woman"
                font_size:"85sp"
                theme_text_color: "Custom"
                text_color: "#ECA400"
                pos_hint:{"center_x":.15, "center_y":.75}
            MDLabel:
                text:'Welcome to the'
                halign:"center"
                font_style:'H4'
                pos_hint:{'center_x':.35, 'center_y':.65}
            MDLabel:
                bold:True
                text:'WAITER APP'
                halign:"center"
                font_style:'H4'
                pos_hint:{'center_x':.35, 'center_y':.6}
            NumberOnlyField:
                id:phone
                mode: "rectangle"
                fill_color: 0, 0, 0, .4
                size_hint: .8, .1
                pos_hint:{'center_x':.5, 'center_y':.48}
                hint_text:"User Phone:"
                text_color: 0, 0, 0, 1
                font_size: dp(25)
            MDTextField:
                id:password
                mode: "rectangle"
                fill_color: 0, 0, 0, .4
                size_hint: .8, .1
                pos_hint:{'center_x':.5, 'center_y':.38}
                hint_text:"Password:"
                text_color: 0, 0, 0, 1
                font_size: dp(25)
            MDFillRoundFlatButton:
                id:login
                text: "Sign in"
                size_hint: .8, .06
                pos_hint:{'center_x':.5, 'center_y':.26}
                md_bg_color: "#0F0A0A"
                on_release:
                    app.login_waiter(phone.text, password.text)
    MDScreen:
        name:"aq"
        FloatLayout:
            RowCard:
                icon:"dog"
                name:"00:15"
                price:"3"

    MDScreen:
        name:"orders"
        FloatLayout:
            MDLabel:
                bold:True
                text:"ORDERS"
                halign:"center"
                font_style:'H4'
                pos_hint:{'center_x':.5, 'center_y':.93}
            MDIcon:
                icon:"menu"
                font_size:"45sp"
                pos_hint:{"center_x":.9, "center_y":.93}
            MDFillRoundFlatButton:
                id:order
                text: "Make New Order"
                size_hint: .8, .06
                pos_hint:{'center_x':.5, 'center_y':.83}
                md_bg_color: "#0F0A0A"
            Card
                pos_hint:{'center_x':.5, 'center_y':.72}
                MDLabel:
                    bold:True
                    text:"Pending(5)"
                    halign:"center"
                    pos_hint:{'center_x':.5}
                MDLabel:
                    bold:True
                    text:"Preparing(2)"
                    halign:"center"
                    pos_hint:{'center_x':.5}
                MDLabel:
                    bold:True
                    text:"Completed(0)"
                    halign:"center"
                    pos_hint:{'center_x':.5}
            MDLabel:
                bold:True
                text:"Table No"
                halign:"center"
                pos_hint:{'center_x':.15, 'center_y':.61}
            MDLabel:
                #bold:True
                text:"Time"
                halign:"center"
                pos_hint:{'center_x':.4, 'center_y':.61}
            MDLabel:
                #bold:True
                text:"Pending Items"
                halign:"center"
                pos_hint:{'center_x':.7, 'center_y':.61}
            Card
                pos_hint:{'center_x':.5, 'center_y':.53}
                md_bg_color: "#4B4B4B"
                Table
                    MDIcon:
                        icon:"table-chair"



    MDScreen:
        name:"genesis"
        MDTextField:
            id:food
            mode: "rectangle"
            fill_color: 0, 0, 0, .4
            size_hint: .8, .1
            pos_hint:{'center_x':.5, 'center_y':.6}
            hint_text:"Food oder:"
            text_color: 0, 0, 0, 1
            font_size: dp(25)

        MDIconButton:
            icon: "language-python"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release:
                app.qrcode(food.text)

    MDScreen:
        name:"qr"
        FloatLayout:
            Image:
                source:"qr_code.png"


<Card@MDBoxLayout>:
    radius:10
    #height:240
    size:app.size_x/2,app.size_y/9.9
    md_bg_color:1, 1, 1, 1
    adaptive_height:True
    adaptive_width:True

<RowCard>:
    #orientation: "vertical"
    md_bg_color: 1, 1, 1, 1
    pos_hint:{"center_x":.5,"center_y":.3}
    padding: "10dp"
    #spacing: "5dp"
    border_radius: 3
    border_color_a: .5
    border_color_a: 1
    adaptive_height:True
    radius: [10]
    size_hint: None, None
    size: app.size_x/1.5, app.size_y/11
    focus_behavior: False
    ripple_color:.9, .9, .95, 1
    ripple_behavior: True
    FloatLayout:
        MDIcon:
            icon:root.icon
            badge_icon:"numeric-10"
            font_size:"30sp"
            theme_text_color:"Custom"
            text_color: 1, .5, .5, 1
            pos_hint:{"center_x":.08,"center_y":.5}
        MDLabel:
            text:root.name
            font_size:"15sp"
            halign:"center"
            pos_hint:{"center_x":.4,"center_y":.5}
        MDLabel:
            text:root.price
            halign:"center"
            pos_hint:{"center_x":.65,"center_y":.5}
        MDIcon:
            icon:"chevron-right"
			font_size:"41sp"
			theme_text_color:"Custom"
			text_color: 1, .5, .5, 1
			pos_hint:{"center_x":.9,"center_y":.5}

<Table@MDBoxLayout>:
    radius:10
    #height:240
    size:app.size_x/2,app.size_y/9.9
    md_bg_color:1, 1, 1, 1
    adaptive_height:True
    adaptive_width:True

