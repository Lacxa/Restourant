#:import sm kivy.uix.screenmanager

ScreenManager
    id:manager
    transition:sm.FadeTransition(duration=.0)
    MDScreen:
        name:"home"
        FloatLayout:
            MDIcon:
                icon:"account-tie-woman"
                font_size:"85sp"
                theme_text_color: "Custom"
                text_color: 80 / 225, 136 / 225, 114 / 225, 1
                pos_hint:{"center_x":.15, "center_y":.75}
            MDLabel:
                text:'Welcome to the'
                halign:"center"
                font_style:'H4'
                pos_hint:{'center_x':.35, 'center_y':.65}
            MDLabel:
                bold:True
                text:'WAITER APP'
                halign:"center"
                font_style:'H4'
                pos_hint:{'center_x':.35, 'center_y':.6}
            MDTextField:
                id:user
                mode: "rectangle"
                fill_color: 0, 0, 0, .4
                size_hint: .8, .1
                pos_hint:{'center_x':.5, 'center_y':.48}
                hint_text:"User Name:"
                text_color: 0, 0, 0, 1
                font_size: dp(25)
            MDTextField:
                id:password
                mode: "rectangle"
                fill_color: 0, 0, 0, .4
                size_hint: .8, .1
                pos_hint:{'center_x':.5, 'center_y':.38}
                hint_text:"Password:"
                text_color: 0, 0, 0, 1
                font_size: dp(25)
            MDFillRoundFlatButton:
                id:login
                text: "Sign in"
                size_hint: .8, .06
                pos_hint:{'center_x':.5, 'center_y':.26}
                md_bg_color: "#0F0A0A"
    MDScreen:
        name:"orders"
        FloatLayout:
            MDLabel:
                bold:True
                text:"ORDERS"
                halign:"center"
                font_style:'H4'
                pos_hint:{'center_x':.5, 'center_y':.93}
            MDIcon:
                icon:"menu"
                font_size:"45sp"
                pos_hint:{"center_x":.9, "center_y":.93}
            MDFillRoundFlatButton:
                id:order
                text: "Make New Order"
                size_hint: .8, .06
                pos_hint:{'center_x':.5, 'center_y':.83}
                md_bg_color: "#0F0A0A"
            Card
                pos_hint:{'center_x':.5, 'center_y':.72}
                MDLabel:
                    bold:True
                    text:"Pending(5)"
                    halign:"center"
                    pos_hint:{'center_x':.5}
                MDLabel:
                    bold:True
                    text:"Preparing(2)"
                    halign:"center"
                    pos_hint:{'center_x':.5}
                MDLabel:
                    bold:True
                    text:"Completed(0)"
                    halign:"center"
                    pos_hint:{'center_x':.5}
            MDLabel:
                bold:True
                text:"Table No"
                halign:"center"
                pos_hint:{'center_x':.15, 'center_y':.61}
            MDLabel:
                #bold:True
                text:"Time"
                halign:"center"
                pos_hint:{'center_x':.4, 'center_y':.61}
            MDLabel:
                #bold:True
                text:"Pending Items"
                halign:"center"
                pos_hint:{'center_x':.7, 'center_y':.61}
            Card
                pos_hint:{'center_x':.5, 'center_y':.53}
                md_bg_color: "#4B4B4B"
                Table
                    MDIcon:
                        icon:"table-chair"



    MDScreen:
        name:"genesis"
        MDTextField:
            id:food
            mode: "rectangle"
            fill_color: 0, 0, 0, .4
            size_hint: .8, .1
            pos_hint:{'center_x':.5, 'center_y':.6}
            hint_text:"Food oder:"
            text_color: 0, 0, 0, 1
            font_size: dp(25)

        MDIconButton:
            icon: "language-python"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release:
                app.qrcode(food.text)

    MDScreen:
        name:"qr"
        FloatLayout:
            Image:
                source:"qr_code.png"


<Card@MDBoxLayout>:
    radius:10
    #height:240
    size:app.size_x/2,app.size_y/9.9
    md_bg_color:1, 1, 1, 1
    adaptive_height:True
    adaptive_width:True

<Table@MDBoxLayout>:
    radius:10
    #height:240
    size:app.size_x/2,app.size_y/9.9
    md_bg_color:1, 1, 1, 1
    adaptive_height:True
    adaptive_width:True

